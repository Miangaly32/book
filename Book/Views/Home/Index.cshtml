@using Book.Models
@model IEnumerable<Book.Models.Livre>
@{
    ViewBag.Title = "Home Page";
}

@Scripts.Render("~/Scripts/custom.js")
<!-- Home -->

<div class="home">

    <!-- Home Slider -->
    <div class="home_slider_container">
        <div class="owl-carousel owl-theme home_slider">

            <!-- Slide -->
            <div class="owl-item">
                <div class="background_image" style="background-image:url(../../media/images/home_slider_1.jpg)"></div>
                <div class="home_content_container">
                    <div class="home_content">
                        <div class="home_discount d-flex flex-row align-items-end justify-content-start">
                            <div class="home_discount_text">Parter à la découverte</div>
                        </div>
                        <div class="home_discount_text">de centaines</div>
                        <div class="home_title">de Livres</div>
                        <div class="button button_1 home_button trans_200"><a href="categories.html">Voir tout!</a></div>
                    </div>
                </div>
            </div>

            <!-- Slide -->
            <div class="owl-item">
                <div class="background_image" style="background-image:url(../../media/images/home_slider_2.jpg)"></div>
                <div class="home_content_container">
                    <div class="home_content">
                        <div class="home_discount d-flex flex-row align-items-end justify-content-start">
                            <div class="home_discount_text">Soyez inspiré par</div>
                        </div>
                        <div class="home_discount_text">de talentueux</div>
                        <div class="home_title">Auteurs</div>
                        <div class="button button_1 home_button trans_200"><a href="categories.html">Vor tout!</a></div>
                    </div>
                </div>
            </div>

            <!-- Slide -->
            <div class="owl-item">
                <div class="background_image" style="background-image:url(../../media/images/home_slider_3.jpg)"></div>
                <div class="home_content_container">
                    <div class="home_content">
                        <div class="home_discount d-flex flex-row align-items-end justify-content-start">
                            <div class="home_discount_text">Aventurez-vous dans </div>
                        </div>
                        <div class="home_discount_text">de nouveaux</div>
                        <div class="home_title">Genres</div>
                        <div class="button button_1 home_button trans_200"><a href="categories.html">Voir tout!</a></div>
                    </div>
                </div>
            </div>

        </div>

        <!-- Home Slider Navigation -->
        <div class="home_slider_nav home_slider_prev trans_200"><div class=" d-flex flex-column align-items-center justify-content-center"><img src="~/media/images/prev.png" alt=""></div></div>
        <div class="home_slider_nav home_slider_next trans_200"><div class=" d-flex flex-column align-items-center justify-content-center"><img src="~/media/images/next.png" alt=""></div></div>

    </div>
</div>
<!-- Boxes -->

<div class="boxes">
    <div class="section_container">
        <div class="container">
            <div class="row">

                <!-- Box -->
                <div class="col-lg-4 box_col">
                    <div class="box">
                        <div class="box_image"><img src="~/media/images/box_1.jpg" width="326" height="183" alt=""></div>
                        <div class="box_title trans_200"><a href="categories.html">Thriller</a></div>
                    </div>
                </div>

                <!-- Box -->
                <div class="col-lg-4 box_col">
                    <div class="box">
                        <div class="box_image"><img src="~/media/images/box_2.jpg" width="326" height="183" alt=""></div>
                        <div class="box_title trans_200"><a href="categories.html">Romance</a></div>
                    </div>
                </div>

                <!-- Box -->
                <div class="col-lg-4 box_col">
                    <div class="box">
                        <div class="box_image"><img src="~/media/images/box_3.jpg" width="326" height="183" alt=""></div>
                        <div class="box_title trans_200"><a href="categories.html">Aventure</a></div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- Products -->

<div class="products">
    <div class="section_container">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="products_container grid">
                       @foreach(var item1 in Model) {
                        <div class="product grid-item">
                            <div class="product_inner">
                                <div class="product_image">
                                    <img src="~/media/images/@Html.DisplayFor(modelItem => item1.image)" alt="" width="239" height="362">
                                </div>
                                <div class="product_content text-center">
                                    <div class="product_title">@Html.DisplayFor(modelItem => item1.Titre)</div>
                                    <span class="product_subtitle" style="display: block;width: 150px;overflow: hidden; white-space: nowrap;text-overflow: ellipsis;">@Html.DisplayFor(modelItem => item1.Description)</span>
                                    <div class="product_button ml-auto mr-auto trans_200">@Html.ActionLink("Voir", "Details", "Livres", new { id = item1.Id }, null)</div>
                                </div>
                            </div>
                        </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

