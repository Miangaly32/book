@model List<Book.Models.Livre>
@{
    ViewBag.Title = "Result";
    Layout = "~/Views/Shared/front_layout.cshtml";
}

<div class="gameBox">
    <div class="gameBox__header">
        <h2>Recherche</h2>
        @using (Html.BeginForm("SearchByKeywords", "Home", FormMethod.Post))
        {
            <input type="text" name="keywords" id="keywords" placeholder="Recherche" />
            <button type="submit">Rechercher</button>
        }
    </div>
    <div class="row">
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <div style="margin-bottom: 25px;">
                    <label>@Html.DisplayFor(modelItem => item.Titre)</label>
                    <br />
                    <a href="@Url.Action("Details", "Livres", item.Id)"><img src="~/media/images/@Html.DisplayFor(modelItem => item.image)" alt="Image" /></a>
                    <br />
                    <br />
                    <a href="@Url.Action("Details", "Livres", item.Id)" class="gameBox__btn gameBox__btn--large">Details</a>
                </div>
            }
        }
        else
        {
            < p > Aucun livre correspondant a votre recherche </ p >
        }
        </div>
</div>