@{
    ViewBag.Title = "Result";
    Layout = "~/Views/Shared/front_layout.cshtml";
    List< Book.Models.Livre> livres  = ViewBag.livres;
    List<Book.Models.Genre> genres = ViewBag.genres;
    List<Book.Models.Auteur> auteurs = ViewBag.auteurs;
}


<div class="gameBox">
    <div class="gameBox__header">
        <h2>Recherche</h2>
        @using (Html.BeginForm("SearchMulticritere", "Home", FormMethod.Get))
        {
            <input type="text" class="form-control" name="titre" id="titre" placeholder="Titre" />
            <select class="form-control" name="idgenre" id="idgenre">
                <option disabled selected>Genre</option>
                @foreach (var item in genres)
                {
                    <option value="@item.Id">@item.Designation</option>
                }
            </select>
            <select class="form-control" name="idauteur" id="idauteur">
                <option disabled selected>Auteur</option>
                @foreach (var item in auteurs)
                {
                <option value="@item.Id">@item.Prenom @item.Nom</option>
                }
            </select>
            <button class="btn btn-default" type="submit">Rechercher</button>
        }
    </div>
    <div class="row">
        @if (livres != null)
        {
            foreach (var item in livres)
            {
                <div style="margin-bottom: 25px;">
                    <label>@Html.DisplayFor(modelItem => item.Titre)</label>
                    <br />
                    <a href="@Url.Action("Livre", "Livres", new { id = @item.Id })"><img src="~/media/images/@Html.DisplayFor(modelItem => item.image)" alt="Image" /></a>
                    <br />
                    <br />
                    <a href="@Url.Action("Livre", "Livres", new { id = @item.Id })" class="gameBox__btn gameBox__btn--large">Details</a>
                </div>
            }
        }
        else
        {
            <p> Aucun livre correspondant a votre recherche </p>
        }
    </div>
</div>